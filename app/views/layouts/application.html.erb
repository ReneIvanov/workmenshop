<!DOCTYPE html>
<html>
  <head>
    <title>Workmenshop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div id="main">
      <div id="header">
        <div id="header_0">
          <%= image_tag("page_logo.jpg", class: 'page_logo') %>
        </div>

        <div id="header_1">
          <p class="title"> WorkmenShop </p>
        </div>

        <div id="header_3">
          <% if session[:person_id] == nil %>
            <p class="logg"> <%= link_to 'Loggin', login_path %> </p>
          <% else %>
            <p class="logg"> <%= link_to 'Loggout', logout_path,
            method: :delete %> </p>
          <% end %>
        </div>

      </div>

      <div id="top_menubar">
        <ul id="top_menubar_item">
          <li> <%= link_to 'Introduction', root_path %> </li>
          <li> <%= link_to 'List of people', people_path %> </li>
           <li> <%= link_to 'New person', new_person_path %> </li>
          <li> 44444 </li>
          <li> 555555 </li>
          <li> 6666 </li>
        </ul> 
      </div>
            
      <div id="page_content">
        <div id="mainbar">
          <%= yield %>           
        </div>  
              
      </div>
            
      <div id="footer">
