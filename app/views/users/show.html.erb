<h3> <%= @user.username %> </h3>

<table class="elements_list">
  <tr> <td>Public uid: </td> <td><%= @user.public_uid %></td> </tr>

  <tr> <td>Username: </td> <td><%= @user.username %></td> </tr>

  <tr> <td>Email: </td> <td><%= @user.email %></td> </tr>

  <tr> <td>Address: </td> <td><%= @user.address %></td> </tr>

  <tr> <td>Telephone: </td> <td><%= @user.telephone %></td> </tr>

  <tr>
    <td>Profile picture: </td>
    <td>
      <% if @user.profile_picture.attached? %>
        <%= image_tag @user.profile_picture %>
      <% else %>
        No profile picture.
      <% end %>  
    </td>
  </tr>

  <tr>
    <td>
      Account: <br>
      <% if @user.account %>
        <%= link_to "(edit account)", accounts_registration_edit_path(@user.account) %>
      <% else %>
        <%= link_to "(create account)", accounts_registration_new_path %>
      <% end %>
    </td>
    <td>
      <% if @user.account && @user.account.customer %>
           customer <br>
      <% end %>
      
      <% if @user.account && @user.account.workmen %>
           workmen <br>
      <% end %>

      <% if @user.account && @user.account.admin %>
           admin
      <% end %>
    </td>
  </tr>

  <tr>
    <td> Works: </td>
    <td>
      <% @user.user_works.each do |work| %>
        <%= work.title %> <br>
      <% end %>
    </td>
  </tr>

</table>



