<% if flash[:alert] %>
<p> <%= flash[:alert] %> </p>
<% end %>

<%= form_tag do |form| %>
	<div>
		<%= label_tag :user_name, 'User name:' %>
		<%= text_field_tag :user_name, params[:user_name] %>
	</div>
	
	<div>
		<%= label_tag :password, 'Password:' %>
		<%= password_field_tag :password, params[:password] %>
	</div>

	<div>
		<%= submit_tag "Login" %>
	</div>
 <% end %>